<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <com.meetyou.roundprogressview.RoundProgressView
                android:id="@+id/roundProgressView"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_margin="40dip"
                />
            <com.meetyou.roundprogressview.ArcTextView
                android:id="@+id/arcTextView"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_margin="40dip"

                />

        </RelativeLayout>
        <com.meetyou.roundprogressview.RotatoAnimationView
            android:id="@+id/rotatoView"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_margin="40dip"
            app:icon="@drawable/apk_yindao_search"
            app:oneshot="true"
            android:background="@color/xiyou_black"

            />

    </LinearLayout>

</ScrollView>
